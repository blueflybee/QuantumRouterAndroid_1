<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_account"
                style="@style/NormalTextViewStyle"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:text="宽带账号"/>

            <EditText
                android:id="@+id/et_account"
                style="@style/NickNameInputStyle"
                android:layout_below="@+id/tv_account"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:maxLength="20"
                android:hint="请输入宽带帐号"
                android:inputType="text"
                android:padding="0dp"
                android:textColorHint="@color/gray_bdbdbd"
                android:textSize="15sp"/>

            <View
                style="@style/LineHorizontalStyle"
                android:layout_below="@id/et_account"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_f3f3f3"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rv_pwd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_account"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_pwd"
                style="@style/NormalTextViewStyle"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="密码"/>

            <EditText
                android:id="@+id/et_pwd"
                style="@style/NickNameInputStyle"
                android:layout_below="@+id/tv_pwd"
                android:layout_toStartOf="@+id/iv_show_pwd"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:hint="请输入宽带密码"
                android:maxLength="20"
                android:inputType="textPassword"
                android:padding="0dp"
                android:textColorHint="@color/gray_bdbdbd"
                android:textSize="15sp"/>

            <CheckBox
                android:layout_alignTop="@id/et_pwd"
                android:id="@+id/iv_show_pwd"
                style="@style/ShowPwdCheckBoxStyle"
                android:layout_centerVertical="false"
                android:layout_marginEnd="25dp"/>

            <View
                style="@style/LineHorizontalStyle"
                android:layout_below="@id/et_pwd"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_f3f3f3"/>

        </RelativeLayout>


        <TextView
            style="@style/NormalTextViewStyle"
            android:layout_below="@id/rv_pwd"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:onClick="showSp"
            android:text="忘记宽带帐号密码？"
            android:textColor="@color/gray_666666"
            android:textSize="14sp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btn_next"
            style="@style/BlueButtonStyle"
            android:layout_below="@+id/rv_pwd"
            android:layout_marginTop="140dp"
            android:text="下一步"/>


    </RelativeLayout>

</layout>