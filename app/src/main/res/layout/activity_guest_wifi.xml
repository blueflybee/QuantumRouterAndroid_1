<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <include
            layout="@layout/app_titlebar"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/blue_2196f3"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:background="@drawable/tool_guestwifi"
                />

            <TextView
                android:id="@+id/tv_guest_wifi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_head"
                android:layout_marginTop="20dp"
                android:text="家里来客人了，能让访客短暂使用的访客WiFi"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_guestwifi_offline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_no"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败，轻触屏幕重新加载"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="@color/gray_bdbdbd"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_guestwifi_online"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="访客wifi"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchBtn_wifi"
                style="@style/SwitchStyle_1"
                android:layout_marginTop="12dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_guest_wifi_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/rl_time_interval1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"


                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="访客WiFi名称"
                        android:textColor="@color/black_424242"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:text="访客网络免密码"
                        android:textColor="@color/gray_999999"
                        android:textSize="13sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_wifi_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="输入名称"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_999999"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray"
                />

            <RelativeLayout
                android:id="@+id/rl_hide_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="隐藏访客网络"
                        android:textColor="@color/black_424242"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:text="已连接上的访客可继续使用"
                        android:textColor="@color/gray_999999"
                        android:textSize="13sp"/>
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchBtn_hide"
                    style="@style/SwitchStyle_1"
                    android:layout_marginTop="12dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>