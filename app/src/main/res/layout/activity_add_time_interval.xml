<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="描述"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_interval_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:hint="请输入描述信息(长度不大于16)"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="16"
                android:textColor="@color/gray_bdbdbd"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limitTime"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <RelativeLayout
                android:id="@+id/rl_startTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="开始时间"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/img_start_more"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_navigate_next_black_48dp"
                    />

                <TextView
                    android:id="@+id/tv_startTime"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/img_start_more"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/gray_999999"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray"
                />

            <RelativeLayout
                android:id="@+id/rl_endTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="结束时间"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/img_end_more"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_navigate_next_black_48dp"
                    />

                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/img_end_more"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/gray_999999"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:text="重复周期"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周一"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周二"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周三"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周四"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周五"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周六"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bottom_week_normal"
                    android:text="周日"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_deleteTimeInterval"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="删除时段"
            android:visibility="visible"
            android:textColor="@color/red_ff504c"
            android:background="@drawable/delete_button"
            />

    </LinearLayout>
</layout>