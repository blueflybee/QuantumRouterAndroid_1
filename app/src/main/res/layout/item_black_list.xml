<layout xmlns:android="http://schemas.android.com/apk/res/android">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="70dp">
       <RelativeLayout
           android:id="@+id/rl_device_type"
           android:layout_width="50dp"
           android:gravity="center"
           android:visibility="gone"
           android:layout_height="70dp">
           <ImageView
               android:id="@+id/img_black_list_head"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
       </RelativeLayout>

       <LinearLayout
           android:layout_toRightOf="@+id/rl_device_type"
           android:layout_marginLeft="20dp"
           android:layout_width="wrap_content"
           android:layout_height="70dp"
           android:orientation="vertical"
           android:gravity="center|left"
           >
           <TextView
               android:id="@+id/tv_black_list_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black_424242"
               android:maxWidth="210dp"
               android:singleLine="true"
               android:ellipsize="end"
               android:textSize="15sp"
               />
           <TextView
               android:id="@+id/tv_black_list_mask"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="210dp"
               android:singleLine="true"
               android:textColor="@color/gray_999999"
               android:textSize="13sp"
               />
       </LinearLayout>

       <TextView
           android:id="@+id/tv_black_list_move"
           android:layout_width="62dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:text="移除"
           android:gravity="center"
           android:layout_marginTop="20dp"
           android:textSize="14sp"
           android:textColor="@color/blue_2196f3"
           android:background="@drawable/friendslist"
           />

       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/gray"
           android:layout_marginLeft="20dp"
           android:layout_alignParentBottom="true"
           />

   </RelativeLayout>
        


</layout>