<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <RelativeLayout
            android:id="@+id/rl_set_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/view_white_selector"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:text="设置上网问题"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/img_lockName"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/gray_999999"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_lockName"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_navigate_next_black_48dp"
                />
        </RelativeLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:background="@color/gray_bdbdbd"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="验证问题"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>


            <EditText
                android:id="@+id/et_virify_question"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:hint="请输入自定义问题"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLength="64"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textColor="@color/black_424242"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_clear_question"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_error"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:background="@color/gray_bdbdbd"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="验证答案"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_virify_answer"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLength="64"
                android:hint="请输入验证答案"
                android:singleLine="true"
                android:textColorHint="@color/gray_999999"
                android:textColor="@color/black_424242"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_clear_answer"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_error"
                android:visibility="gone"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/BlueButtonStyle"
            android:layout_marginTop="40dp"
            android:text="确认"
            />


    </LinearLayout>
</layout>