<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fernandocejas.android10.sample.presentation.view.component.TopBarView
            android:id="@+id/tb_modifyPwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"></com.fernandocejas.android10.sample.presentation.view.component.TopBarView>

        <TextView
            android:id="@+id/tv_msgNotification"
            style="@style/AppTheme.TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="将会发送验证码至您的手机\n123****1234" />

        <Button
            android:id="@+id/btn_sureModified"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:text="确认修改" />

    </LinearLayout>
</layout>