<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.qtec.mapp.model.rsp.IntelDeviceListResponse"/>
        <import type="com.fernandocejas.android10.sample.presentation.constant.AppConstant"/>

        <variable
            name="deviceBean"
            type="IntelDeviceListResponse"/>
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rv_device"
        android:layout_height="50dp"
        android:background="@drawable/view_white_selector">

        <TextView
            android:id="@+id/tv_device_name"
            style="@style/MineFeedbackTvStyle"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:drawableStart="@{AppConstant.KEY_LOCK_STATUS_0.equals(deviceBean.deviceStatus) ? @drawable/lock_grey : @drawable/lock_blue}"
            android:text="@{deviceBean.deviceName}"/>

        <TextView
            android:id="@+id/tv_device_status"
            style="@style/NormalTextViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:ellipsize="end"
            android:maxEms="20"
            android:singleLine="true"
            android:text="@{AppConstant.getLockStatus(deviceBean.deviceStatus)}"
            android:textColor="@color/gray_999999"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_arrow"
            style="@style/MineFeedbackIvStyle"
            android:layout_marginRight="20dp"/>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:background="@color/gray_bdbdbd"
            />

    </RelativeLayout>
</layout>