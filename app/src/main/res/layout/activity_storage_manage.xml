<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f3f3f3"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <RelativeLayout

            android:id="@+id/rl_device_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/title_bar"
            android:background="@drawable/view_white_selector"
            >

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="设备列表"/>

            <TextView
                android:id="@+id/tv_device_list"
                style="@style/NormalTextViewStyle"
                android:maxWidth="255dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/gray_999999"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <View
                style="@style/LineHorizontalStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/rl_device_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_device_list"
            android:background="@drawable/view_white_selector"
            >

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="设备状态"/>

            <TextView
                android:id="@+id/tv_device_state"
                style="@style/NormalTextViewStyle"
                android:maxWidth="255dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/gray_999999"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <View
                style="@style/LineHorizontalStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/rl_use_condition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_device_state"
            android:background="@drawable/view_white_selector"
            >

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="使用情况"/>

            <TextView
                android:id="@+id/tv_use_condition"
                style="@style/NormalTextViewStyle"
                android:maxWidth="255dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textColor="@color/gray_999999"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <View
                style="@style/LineHorizontalStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_use_condition"
            android:background="@drawable/view_white_selector"
            android:onClick="onVideoModeClick"
            >

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="录像模式"/>

            <TextView
                android:id="@+id/tv_video_mode"
                style="@style/NormalTextViewStyle"
                android:maxWidth="255dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow_time_zone_set1"
                android:layout_marginEnd="5dp"
                android:text=""
                android:textColor="@color/gray_999999"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <ImageView
                android:id="@+id/iv_arrow_time_zone_set1"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="20dp"/>

            <View
                style="@style/LineHorizontalStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>

        <Button
            style="@style/BlueButtonStyle"
            android:layout_below="@id/rl_video_mode"
            android:text="格式化"
            android:layout_marginTop="50dp"
            android:onClick="onFormatClick"
            />

    </RelativeLayout>

</layout>