<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/exit_outer_layout"
        android:layout_width="345dp"
        android:layout_height="210dp"
        android:layout_marginTop="130dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_close_input_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/dialog_neg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_error"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/black_424242"
            android:textSize="16dp"
            android:text="邀请朋友"
            />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:background="@color/gray_fafafa"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_input_num"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入手机号"
                android:minWidth="200dp"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gray_bdbdbd"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/dialog_select_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="通讯录"
                android:textSize="14sp"
                android:background="@drawable/friendslist"
                android:textColor="@color/blue"/>
