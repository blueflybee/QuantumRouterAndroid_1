<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptr_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar"
            cube_ptr:ptr_duration_to_close_header="700"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.8">

            <!-- <ListView
                 android:id="@+id/lv_lock_use_note"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_record_list_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="#00000000"
                    android:divider="@null"
                    />

                <include
                    android:id="@+id/include_empty_view"
                    layout="@layout/empty_layout_lock_use_note"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ptr_layout"
            />

        <LinearLayout
            android:id="@+id/ll_is_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/btn_all_readed"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="全部设置为已读"
                android:textColor="@color/blue_2198F4"
                android:textSize="16sp"
                android:visibility="visible"
                android:background="@color/white"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray"
                />

            <Button
                android:id="@+id/btn_delete"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="删除"
                android:textColor="@color/red_ff4e46"
                android:textSize="16sp"
                android:visibility="visible"
                android:background="@color/white"
                />

        </LinearLayout>

    </RelativeLayout>
</layout>