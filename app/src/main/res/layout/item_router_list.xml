<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/img_router"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/ic_router_black"
                />
            <RelativeLayout
                android:id="@+id/rl_routerName"
                android:layout_width="160dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_router"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_routerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="九州网关11332323232sasaaasaasasasasasa3232232332"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="160dp"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_memNum"
                android:layout_toRightOf="@+id/rl_routerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="正在共享给3位成员"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_999999"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_navigate_next_black_48dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="18dp"
            android:background="#bdbdbd"
            />

        <TextView
            android:id="@+id/tv_lockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:text="九州智能锁1"
            android:textColor="@color/black_424242"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/gray"
        />

</LinearLayout>