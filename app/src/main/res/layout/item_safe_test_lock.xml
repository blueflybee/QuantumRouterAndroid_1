<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_safe_device_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_safe_device_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="265dp"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:textColor="@color/black_424242"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="检测完成"
                android:textColor="@color/gray_999999"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_safe_device_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                >

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="量子密钥通道: 已开启"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:background="@drawable/test_obing"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                >

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="蓝牙网络加密连接: 已开启"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/test_obing"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                >

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="ZigBee网络加密连接: 已开启"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/test_obing"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>