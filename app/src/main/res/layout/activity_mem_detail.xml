<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="68dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:text="q2122121212121212121"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="备注名称"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/et_RemarkName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:hint="请输入备注名称"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/gray_bdbdbd"
                    android:textSize="17sp"/>
                />

                <ImageView
                    android:id="@+id/img_clear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_error"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="邀请时间"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_InviteTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1221212121212121212121"
                    android:textColor="@color/black_424242"
                    android:textSize="15sp"/>
                />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>