<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_titlebar"/>

        <RelativeLayout
            style="@style/LoginInputItemLayoutStyle"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/et_door_card_name"
                android:maxLength="16"
                android:inputType="text"
                style="@style/LoginInputStyle"
                android:hint="请输入门卡名称"/>

            <View
                style="@style/LineHorizontalStyle"
                android:layout_below="@id/et_door_card_name"
                android:layout_marginTop="12.5dp"/>

        </RelativeLayout>

    </LinearLayout>
</layout>