<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/exit_outer_layout"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_error"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/black_424242"
            android:textSize="16dp"
            tools:text="重启猫眼"/>

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/black_424242"
            android:textSize="14dp"
            tools:text="确定重启猫眼吗？"/>

        <LinearLayout
            android:id="@+id/ll_camera_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/dialog_img_zheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_camera_zheng_press"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/dialog_img_dao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_camera_dao_press"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_neg"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_marginLeft="8dp"
                android:background="@color/blue_2196f3"
                android:text="取消"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/dialog_pos"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:background="@color/blue_2196f3"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="确认"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>