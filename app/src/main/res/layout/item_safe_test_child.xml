<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_has_key"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            >

            <TextView
                android:id="@+id/tv_safe_child_view_title"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_dddddd"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/img_safe_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/test_obing"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_has_no_key"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="暂时没有载入密钥"
            android:paddingLeft="40dp"
            android:textColor="@color/black_424242"
            android:textSize="15sp"/>

    </LinearLayout>
</layout>