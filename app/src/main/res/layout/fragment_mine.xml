<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_fafafa"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">

            <ImageView
                android:id="@+id/img_head"
                style="@style/HeadIvStyle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/img_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                >
                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rl_deviceShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_white_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share"
                android:drawablePadding="12dp"
                android:text="设备共享"
                android:textColor="@color/black_424242"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_deviceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="您现在拥有0个设备"
                android:textColor="@color/gray_cdcdcd"
                android:textSize="12sp"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_adviceFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_white_selector"
            android:padding="15dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:drawableLeft="@drawable/ic_feedback"
                android:text="用户反馈"/>

            <ImageView
                style="@style/MineFeedbackIvStyle"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_white_selector"
            android:padding="15dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:drawableLeft="@drawable/ic_us"
                android:text="关于我们"/>

            <ImageView
                style="@style/MineFeedbackIvStyle"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_versionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_white_selector"
            android:padding="15dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:drawableLeft="@drawable/ic_message"
                android:text="版本信息"/>

            <ImageView
                style="@style/MineFeedbackIvStyle"/>
        </RelativeLayout>

    </LinearLayout>
</layout>