<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.qtec.mapp.model.rsp.GetDevTreeResponse"/>

        <import type="com.qtec.mapp.model.rsp.GetDevTreeResponse.DeviceBean"/>

        <variable
            name="router"
            type="GetDevTreeResponse"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_indicator"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:scaleType="center"
                android:src="@drawable/indexic_arrowopen"/>


            <RelativeLayout
                android:id="@+id/rv_left"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_dev_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/indexic_router"/>


                    <RelativeLayout
                        android:id="@+id/ll_router_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_router_name"
                            style="@style/MineFeedbackTvStyle"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="false"
                            android:layout_marginStart="12dp"
                            android:layout_toStartOf="@+id/tv_current_connect"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@{router.deviceName}"
                            android:textColor="@color/black_333333"/>

                        <TextView
                            android:id="@+id/tv_current_connect"
                            style="@style/NormalTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_fragment_dev_current_connected"
                            android:padding="2.5dp"
                            android:text="当前连接"
                            android:textColor="@color/blue_2196f3"
                            android:textSize="10sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_status"
                            style="@style/NormalTextViewStyle"
                            android:layout_below="@+id/tv_router_name"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/gray_999999"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:scaleType="center"
                android:src="@drawable/indexic_share"/>

        </LinearLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_2196f3_95"
            />
    </RelativeLayout>

</layout>